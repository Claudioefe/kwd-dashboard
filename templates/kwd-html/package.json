{
  "name": "kwd-html",
  "version": "0.0.1",
  "description": "html version of kwd dashboard template",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kamona-WD/kwd-dashboard.git",
    "directory": "templates/dashboard/kwd-html"
  },
  "bugs": {
    "url": "https://github.com/Kamona-WD/kwd-dashboard/issues"
  },
  "homepage": "https://github.com/Kamona-WD/kwd-dashboard#readme",
  "author": {
    "name": "Ahmed Kamel",
    "email": "ak3849909@gmail.com",
    "url": "https://github.com/kamona-wd"
  },
  "keywords": [
    "dashboard",
    "tailwindcss",
    "layout",
    "alpinejs",
    "admin",
    "template"
  ],
  "scripts": {
    "dev": "run-p js:watch html:watch css:watch serve",
    "build": "run-s js:build html:build css:build",
    "serve": "kwd-cli serve -w",
    "html:build": "kwd-cli html -o ../../dist",
    "html:watch": "kwd-cli html -w",
    "js:build": "kwd-cli js -o ../../dist/assets/js",
    "js:watch": "kwd-cli js -w",
    "css:build": "tailwind -i src/assets/css/tailwind.css -o ../../dist/assets/css/main.css -m",
    "css:watch": "tailwind -i src/assets/css/tailwind.css -o dist/assets/css/main.css -w"
  },
  "devDependencies": {
    "alpinejs": "^3.2.4",
    "autoprefixer": "^10.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "tailwindcss": "^2.2.7"
  }
}
