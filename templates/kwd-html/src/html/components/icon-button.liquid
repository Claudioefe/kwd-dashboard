{% assign type = 'button' %}
{% assign text = '' %}
{% assign attrs = '' %}
{% assign classes = '' %}
{% assign iconClass = '' %}
{% assign iconSize = 'md' %}
{% assign iconAttrs = '' %}

<button
  type="{{ type }}"
  {{ attrs }}
  class="{{ classes }} flex items-center justify-center p-2 text-purple-500 transition-colors duration-200 rounded-full  bg-purple-50 hover:text-purple-700 hover:bg-purple-100 dark:bg-gray-800 focus:outline-none focus:ring focus:ring-purple-200 dark:focus:ring-gray-700"
>
  <span class="sr-only">{{ text }}</span>
  <i class="bx {{ iconClass }} bx-{{ iconSize }}" {{ iconAttrs }}></i>
</button>
