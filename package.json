{
  "name": "kwd-dashboard",
  "description": "Responsive dashboard built with tailwindcss.",
  "private": true,
  "workspaces": [
    "templates/*"
  ],
  "author": {
    "name": "Ahmed Kamel",
    "email": "ak3849909@gmail.com",
    "url": "https://github.com/Kamona-WD"
  },
  "scripts": {
    "format": "prettier -w .",
    "vue:dev": "cd templates/kwd-vue && yarn dev",
    "vue:build": "cd templates/kwd-vue && yarn build",
    "vue:preview": "cd templates/kwd-vue && yarn serve",
    "html:dev": "cd templates/kwd-html && yarn dev",
    "html:build": "cd templates/kwd-html && yarn build",
    "html:preview": "cd templates/kwd-html && yarn preview"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "pre-push": "lint-staged"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "yorkie": "^2.0.0"
  }
}
